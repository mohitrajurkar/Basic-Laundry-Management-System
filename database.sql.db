

CREATE DATABASE IF NOT EXISTS LaundryManagement;
USE LaundryManagement;




CREATE TABLE IF NOT EXISTS Users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(50) NOT NULL,
    password VARCHAR(100) NOT NULL
);


CREATE TABLE IF NOT EXISTS ServiceType (
    id INT AUTO_INCREMENT PRIMARY KEY,
    service_name VARCHAR(50) NOT NULL
);


CREATE TABLE IF NOT EXISTS LaundryType (
    id INT AUTO_INCREMENT PRIMARY KEY,
    laundry_type VARCHAR(50),
    fabric VARCHAR(50),
    weight DECIMAL(5,2)
);


DROP TABLE IF EXISTS NewLaundry; -- Drop old table safely
CREATE TABLE IF NOT EXISTS NewLaundry (
    id INT AUTO_INCREMENT PRIMARY KEY,
    customer_name VARCHAR(100) NOT NULL,
    service_type_id INT,
    date_received DATE,
    priority VARCHAR(20),
    amount DECIMAL(8,2),
    num_shirts INT DEFAULT 0,
    num_pants INT DEFAULT 0,
    num_other INT DEFAULT 0,
    FOREIGN KEY (service_type_id) REFERENCES ServiceType(id)
);


CREATE TABLE IF NOT EXISTS DailySales (
    id INT AUTO_INCREMENT PRIMARY KEY,
    customer_name VARCHAR(100) NOT NULL,
    date_paid DATE,
    amount DECIMAL(8,2)
);




